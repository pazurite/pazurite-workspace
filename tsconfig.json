{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "",
    "outDir": "dist",
    "baseUrl": "./",
    "strictNullChecks": true,
    "types": ["node", "node-sass"],
    "typeRoots": ["typings/index.d.ts"],
    "paths": {
      "@/*": ["packages/*"]
    }
  },

  "include": ["packages", "plugins", "app"],
  "exclude": ["node_modules", "build", "scripts", "tests", "jest"]
}
